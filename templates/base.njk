        {% else %}
          <button id="theme-system" class="theme-button">
            <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 20H25V6.25H5V20ZM16.25 22.5V25H21.25V27.5H8.75V25H13.75V22.5H3.73975C3.05506 22.5 2.5 21.9389 2.5 21.2406V5.00935C2.5 4.31384 3.06914 3.75 3.73975 3.75H26.2602C26.945 3.75 27.5 4.31115 27.5 5.00935V21.2406C27.5 21.9361 26.9309 22.5 26.2602 22.5H16.25Z" fill="black"/>
